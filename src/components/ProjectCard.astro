---
interface Props {
  title       : string;
  image       : string;
  tools       : string[];
  href        : string;
  gitHub      : string;
}

const { title, tools, image, href, gitHub } = Astro.props
---

<div class="card" title={title}>
  <img class="card__image" src={image} alt="project">
  <div class="card__content">
    <p class="card__content-title">{title}</p>
    <p class="card__content-description">
      <slot />
    </p>
    <ol class="card__content-tools">
      { tools.map((item) => <li>{item}</li>) }
    </ol>
  </div>
  <div class="card__actions">
    {
      gitHub &&
      <a class="card__content-tools" href={gitHub} rel="noopener noreferrer" target="_blank">
        <span>GitHub</span>
      </a>
    }
  
    <a class="card__content-tools" href={href} rel="noopener noreferrer" target="_blank">
      <span>Visit</span>
    </a>
  </div>
</a>

<style>
  .card{
    background: #17203391;
    align-items: start;
    display: flex;
    flex-direction: column;
    padding: 30px 30px 80px 30px;
    color: var(--white);
    font-family: var(--font-regular);
    gap: 24px;
    transition: all .5s;
    border-radius: 12px;
    cursor: pointer;
    position: relative;
  }

  @media (max-width: 500px) {
    .card{
      margin: 0px 15px;
    }
  }

  .card:hover{
    background: #172033;
    transition: all .2s;
  }

  .card:hover .card__content-title img {
    transform: scale(1.2);
  }

  .card__image{
    width: 190px;
    height: 120px;
    object-fit: cover;
    margin: 0 auto;
    border-radius: 8px;
  }

  .card__content{
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .card__content-title{
    font-size: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .card__content-description{
    color: #b9b9bb;
  }

  .card__content-tools{
    display: flex;
    gap: 8px;
  }

  .card__content-tools li {
    font-size: 12px;
    font-family: var(--font-regular);
    letter-spacing: 1px;
    font-weight: 600;
    background-color: var(--primary-light);
    color: var(--primary);
    border-radius: 16px;
    padding: 5px 8px;
  }

  .card__actions{
    position: absolute;
    bottom: 20px;
    left: 0;
    display: flex;
    width: 100%;
    gap: 15px;
    align-items: center;
    justify-content: center;
  }

  .card__actions a{
    font-size: 15px;
    font-family: var(--font-regular);
    letter-spacing: 1px;
    font-weight: 800;
    color: var(--black);
    background-color: var(--white);
    border-radius: 10px;
    padding: 8px 12px;
    transition: all .3s;
  }

  .card__actions a:hover{
    background-color: #e1e1e1;
    transform: scale(1.05);
  }

</style>