---
import AngularIcon from "../Icons/Angular.astro";
import ReactIcon from "../Icons/ReactIcon.astro";
import TsIcon from "../Icons/TsIcon.astro";
import JestIcon from "../Icons/JestIcon.astro";
import PlaywrightIcon from "../Icons/PlaywrightIcon.astro";
import NextIcon from "../Icons/NextIcon.astro";
import AstroIcon from "../Icons/AstroIcon.astro";

---

<section id="skills" class="skills">
  <h3 class="skills__title">Skills</h3>

  <div class="skills_content">
    <a href="https://angular.dev/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <AngularIcon />
        <h3>Angular</h3>
      </div>
    </a>
    <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <AstroIcon/>
        <h3>Astro</h3>
      </div>
    </a>
    <a href="https://react.dev/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <ReactIcon />
        <h3>React</h3>
      </div>
    </a>
    <a href="https://nextjs.org/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <NextIcon />
        <h3>Next.js</h3>
      </div>
    </a>
    <a href="https://www.typescriptlang.org/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <TsIcon />
        <h3>Typescript</h3>
      </div>
    </a>
    <a href="https://jestjs.io/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <JestIcon />
        <h3>Jest</h3>
      </div>
    </a>
    <a href="https://playwright.dev/" target="_blank" rel="noopener noreferrer">
      <div class="skills_card">
        <PlaywrightIcon />
        <h3>Playwright</h3>
      </div>
    </a>
  </div>

</section>

<style>
  .skills{
    margin-bottom: 84px;
    margin-top: 62px;
  }

  .skills__title{
    color: var(--white);
    font-family: var(--font-bold);
    font-size: 3.5rem;
    text-align: center;
    margin: 32px 0px;
  }

  .skills_card{
    width: 120px;
    height: 140px;
    padding: 1.5rem;
    border-radius:  12px;
    background-color: #ffffff0f;
    cursor: pointer;
    transition: .3s;
  }

  .skills_card h3 {
    color: #fff;
    text-align: center;
  }

  .skills_card:hover{
    transform: scale(1.05);
    background-color: #ffffff16;
  }

  .skills_content{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    padding: 0px 25px;
    flex-wrap: wrap;

  }

  @media ( width <= 1330px ) {
    .skills_content{
      padding: 0 10px;
      gap: 1rem;
    }
  }

</style>